##

apache_dir = @apache_dir@
builddir=.
top_srcdir=$(apache_dir)
top_builddir=$(apache_dir)
include $(apache_dir)/build/special.mk

#   the used tools
APXS=$(apache_dir)/bin/apxs
APACHECTL=$(apache_dir)/bin/apachectl

SOURCE_FILES=mod_wodan.c cache.c httpclient.c networkconnector.c match.c util.c 
INCLUDE_FILES=cache.h httpclient.h networkconnector.h match.h util.h
OBJECT_FILES=mod_wodan.o cache.o httpclient.o networkconnector.o match.o util.o
DEFS=-W -Wall -Wpointer-arith -Wstrict-prototypes
INCLUDES=-I$(apache_dir)/include
#LIBS=-Lmy/lib/dir -lmylib

#   the default target
all: mod_wodan.so

all_devel: $(OBJECT_FILES)

mod_wodan.so: $(SOURCE_FILES) $(INCLUDE_FILES)
	$(APXS) -c $(DEFS) $(INCLUDES) $(LIBS) $(SOURCE_FILES)
	
install: all
	$(APXS) -i -a -n 'wodan' mod_wodan.la

clean:
	-rm -f *o *lo *slo *la mod_wodan.so 

#   simple test
test: reload
	lynx -mime_header http://localhost/wodan

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

# only for development:
-include $(OBJECT_FILES:.o=.d)

%.o: %.c
	gcc -c $(DEFS) $(INCLUDES) $*.c -o $*.o
	gcc -MM $(DEFS) $(INCLUDES) $*.c > $*.d

clean-devel:
	-rm -f *o *d *lo *slo *la mod_wodan.so 

	 
